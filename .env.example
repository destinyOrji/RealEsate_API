# CAM-GD Homes API Environment Configuration

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME="CAM-GD Homes API"

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=camgd_homes
MONGODB_USERNAME=
MONGODB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=3600

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost/CAM-GD%20HOMES/api

# Email Configuration (for password reset, notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@camgdhomes.com
MAIL_FROM_NAME="CAM-GD Homes"

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/

# Security Settings
CORS_ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/api.log
